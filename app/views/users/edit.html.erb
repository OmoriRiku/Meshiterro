<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">プロフィール画像</h5>
        <div class="form-body p-4">
          <%= form_with model: @user do |f| %>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span for="inputName">Name</span>
                  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
              </div>
              
              <div class="input-group mt-3">
                <%= image_tag @user.get_profile_image(100,100), class: "mb-3" %>
              </div>
              
              <div class="input-group my-3">
                <label>
                  <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: '/image/*', class: "w-100" %>
                </label>
              </div>
            <%= f.submit '投稿', class: "btn btn-lg btn-block btn-info mt-5" %>
          <% end %>
        </div>
    </div>
  </div>
</div>